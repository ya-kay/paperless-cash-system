#:import utils kivy.utils

<InputScreen>:
    GridLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#39B3F2")
            Rectangle:
                size: self.size
                pos: self.pos  
        rows:4
        Label:
            id: product_name
            font_size: 30
            color: [0,0,0,1] #[r,g,b,a]
            text: ""
        Label:
            id: input_price
            font_size: 30
            color: [0,0,0,1] #[r,g,b,a]
            text: ""
        GridLayout:
            cols:2                                                                             
            TextInput:
                id: input_count
                hint_text: "Anzahl angeben"
                input_filter: {"9", "8", "7", "6", "5", "4", "3", "2", "1", "0", "."}
                size: 0.3, 0.5
                font_size: 30
                halign: "center"
                padding: [0,30,0,0] #[padding_left, padding_top, padding_right, padding_bottom]
                readonly: True
            GridLayout:
                rows:4
                cols:3
                Button:
                    text: "7"
                    on_press: input_count.text += self.text
                Button:
                    text: "8"
                    on_press: input_count.text += self.text
                Button:
                    text: "9"
                    on_press: input_count.text += self.text 
                Button:
                    text: "4"
                    on_press: input_count.text += self.text
                Button:
                    text: "5"
                    on_press: input_count.text += self.text
                Button:
                    text: "6"
                    on_press: input_count.text += self.text 
                Button:
                    text: "1"
                    on_press: input_count.text += self.text
                Button:
                    text: "2"
                    on_press: input_count.text += self.text
                Button:
                    text: "3"
                    on_press: input_count.text += self.text
                Button:
                    text: "0"
                    on_press: input_count.text += self.text
                Button:
                    text: "."
                    on_press: input_count.text += self.text
                Button:
                    text: "Del"
                    on_press: input_count.text = input_count.text[0:-1]                                         

        GridLayout:
            cols:2
            Button:
                text: "Einloggen"
                on_release:
                    app.calculate("input_screen", root)
                    app.change_screen("home_screen")
            Button:
                text: "Abbrechen"
                on_release:
                    app.change_screen("home_screen")       