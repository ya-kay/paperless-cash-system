#:import utils kivy.utils

<QRScreen>:    
    GridLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#34495e")
            Rectangle:
                size: self.size
                pos: self.pos  
        rows:2
        Label: 
            text: "Abgeschlossen: Beleg als QR-Code anzeigen"
            color: [0.93,0.94,0.95,1] #[r,g,b,a]
        GridLayout:
            cols:1
            Button: 
                text: "QR"
                id: finish_qr_button
                on_release: app.finish("qr")
