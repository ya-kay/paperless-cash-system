#:import utils kivy.utils

<FinishScreen>:
    GridLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#34495e")
            Rectangle:
                size: self.size
                pos: self.pos  
        rows:5
        TextInput:
            pos_hint: {"top": 1, "left": 1}
            size_hint:1, .3
            id: output_total
            font_size: self.height / 2
            halign: "center"
            readonly: True
            padding: [0, (self.height-self.line_height)/2]
        GridLayout:
            cols:2                                                                             
            TextInput:
                id: input_money
                hint_text: "Gegeben"
                input_filter: {"9", "8", "7", "6", "5", "4", "3", "2", "1", "0", "."}
                size: 0.3, 0.5
                font_size: 40
                halign: "center"
                padding: [0, (self.height-self.line_height)/2] #[padding_left, padding_top, padding_right, padding_bottom]
                readonly: True
            GridLayout:
                rows:4
                cols:3
                Button:
                    text: "7"
                    on_press: input_money.text += self.text
                Button:
                    text: "8"
                    on_press: input_money.text += self.text
                Button:
                    text: "9"
                    on_press: input_money.text += self.text 
                Button:
                    text: "4"
                    on_press: input_money.text += self.text
                Button:
                    text: "5"
                    on_press: input_money.text += self.text
                Button:
                    text: "6"
                    on_press: input_money.text += self.text 
                Button:
                    text: "1"
                    on_press: input_money.text += self.text
                Button:
                    text: "2"
                    on_press: input_money.text += self.text
                Button:
                    text: "3"
                    on_press: input_money.text += self.text
                Button:
                    text: "0"
                    on_press: input_money.text += self.text
                Button:
                    text: "."
                    on_press: input_money.text += self.text
                Button:
                    text: "Del"
                    on_press: input_money.text = input_money.text[0:-1] 
        Button:
            text: "Berechnen"
            on_press: money_back.text = str("{:.2f}".format((float(input_money.text) - float(output_total.text)))) if (float(input_money.text) - float(output_total.text)) >= 0 else "Fehler"
    
        Label:
            id: money_back
            text: ""                 
        Button: 
            text: "Weiter (zuerst Berechnen dr√ºcken)"
            id: finish_button
            on_release: app.finishPayment() 
            